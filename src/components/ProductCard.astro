---
interface Props {
  title: string;
  description: string;
  tag: string;
  price: string;
  originalPrice?: string;
  image: string;
  gumroadUrl: string;
  isFree?: boolean;
  comingSoon?: boolean;
}

const {
  title,
  description,
  tag,
  price,
  originalPrice,
  image,
  gumroadUrl,
  isFree = false,
  comingSoon = false
} = Astro.props;
---

<div class:list={['product-card', 'reveal', { 'coming-soon': comingSoon }]}>
  <div class="product-image" style={`background-image: url('${image}')`}>
    {comingSoon ? (
      <span class="product-badge coming-soon-badge">Coming Soon</span>
    ) : isFree ? (
      <span class="product-badge free">Free</span>
    ) : (
      <span class="product-badge">{price}</span>
    )}
  </div>
  <div class="product-content">
    <p class="product-tag">{tag}</p>
    <h3 class="product-title">{title}</h3>
    <p class="product-description">{description}</p>
    <div class="product-footer">
      {comingSoon ? (
        <>
          <span class="product-price muted">2026</span>
          <span class="gumroad-button disabled">Coming Soon</span>
        </>
      ) : (
        <>
          <span class="product-price">
            {price}
            {originalPrice && <span class="original-price">{originalPrice}</span>}
          </span>
          <a
            class="gumroad-button"
            href={gumroadUrl}
            data-gumroad-overlay-checkout="true"
          >
            {isFree ? 'Download' : 'Purchase'}
          </a>
        </>
      )}
    </div>
  </div>
</div>

<style>
  .product-card {
    background: var(--charcoal);
    border: 1px solid var(--dark-gray);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .product-card:hover {
    border-color: var(--gold);
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }

  .product-card.coming-soon {
    opacity: 0.6;
    pointer-events: none;
  }

  .product-image {
    height: 280px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--gold);
    color: var(--black);
    padding: 0.5rem 1rem;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .product-badge.free {
    background: var(--cream);
  }

  .product-badge.coming-soon-badge {
    background: var(--dark-gray);
    color: var(--gray);
  }

  .product-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .product-tag {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--gold);
    margin-bottom: 0.5rem;
  }

  .product-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.5rem;
    color: var(--cream);
    font-weight: 400;
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  .product-description {
    font-size: 0.9rem;
    color: var(--gray);
    line-height: 1.6;
    flex: 1;
    margin-bottom: 1.5rem;
  }

  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--dark-gray);
  }

  .product-price {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.25rem;
    color: var(--cream);
  }

  .product-price.muted {
    color: var(--gray);
  }

  .original-price {
    font-size: 0.9rem;
    color: var(--gray);
    text-decoration: line-through;
    margin-left: 0.5rem;
  }

  .gumroad-button {
    background: var(--gold);
    color: var(--black);
    padding: 0.75rem 1.5rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
    display: inline-block;
  }

  .gumroad-button:hover {
    background: var(--gold-light);
    transform: translateY(-2px);
  }

  .gumroad-button.disabled {
    background: var(--dark-gray);
    color: var(--gray);
    cursor: default;
    transform: none;
  }
</style>
