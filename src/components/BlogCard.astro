---
interface Props {
  title: string;
  excerpt: string;
  category: 'competence' | 'composure' | 'character';
  date: string;
  readTime: string;
  image: string;
  slug: string;
}

const { title, excerpt, category, date, readTime, image, slug } = Astro.props;

const categoryLabels: Record<string, string> = {
  competence: 'Competence',
  composure: 'Composure',
  character: 'Character'
};
---

<a href={`/library/${slug}`} class="book-card reveal" data-category={category}>
  <div class="book-card-image" style={`background-image: url('${image}')`}></div>
  <div class="book-card-content">
    <p class="book-card-tag">{categoryLabels[category]}</p>
    <h2 class="book-card-title">{title}</h2>
    <p class="book-card-excerpt">{excerpt}</p>
    <p class="book-card-meta">{date} Â· {readTime}</p>
  </div>
</a>

<style>
  .book-card {
    background: var(--charcoal);
    border: 1px solid var(--dark-gray);
    transition: all 0.3s ease;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    aspect-ratio: 3/4;
  }

  .book-card:hover {
    border-color: var(--gold);
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }

  .book-card.hidden {
    display: none;
  }

  .book-card-image {
    height: 55%;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .book-card-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, var(--charcoal) 0%, transparent 40%);
  }

  .book-card-content {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
  }

  .book-card-tag {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--gold);
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .book-card-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.35rem;
    color: var(--cream);
    font-weight: 400;
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  .book-card-excerpt {
    font-size: 0.85rem;
    color: var(--gray);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .book-card-meta {
    font-size: 0.7rem;
    color: var(--gray);
    margin-top: auto;
    padding-top: 1rem;
    letter-spacing: 0.05em;
    border-top: 1px solid var(--dark-gray);
  }
</style>
