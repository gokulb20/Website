---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const categoryLabels: Record<string, string> = {
  competence: 'Competence',
  composure: 'Composure',
  character: 'Character'
};

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={`${post.data.title} | Jack Rook`} solidNav={true}>

  <article class="article">
    <!-- Article Header -->
    <header class="article-header">
      <a href="/library" class="back-link reveal">← Back to The Library</a>
      <p class="article-category reveal">{categoryLabels[post.data.category]}</p>
      <h1 class="reveal">{post.data.title}</h1>
      <p class="article-meta reveal">
        {formatDate(post.data.date)} · {post.data.readTime}
      </p>
    </header>

    <!-- Featured Image -->
    <div
      class="article-image reveal"
      style={`background-image: url('${post.data.image}')`}
    ></div>

    <!-- Article Content -->
    <div class="article-content reveal">
      <Content />
    </div>

    <!-- Article Footer -->
    <footer class="article-footer">
      <a href="/library" class="btn-secondary">← Back to The Library</a>
    </footer>
  </article>

</BaseLayout>

<style>
  .article {
    max-width: 800px;
    margin: 0 auto;
    padding: 8rem 2rem 4rem;
  }

  .article-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    font-size: 0.8rem;
    color: var(--gold);
    text-decoration: none;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 2rem;
    transition: opacity 0.2s;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  .article-category {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .article-header h1 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--cream);
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .article-meta {
    font-size: 0.85rem;
    color: var(--gray);
    letter-spacing: 0.05em;
  }

  .article-image {
    width: 100%;
    height: 400px;
    background-size: cover;
    background-position: center;
    margin-bottom: 3rem;
    border: 1px solid var(--dark-gray);
  }

  .article-content {
    font-size: 1.1rem;
    line-height: 1.9;
    color: var(--cream);
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--gray);
  }

  .article-content :global(h2) {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.75rem;
    color: var(--cream);
    margin: 3rem 0 1.5rem;
    font-weight: 400;
  }

  .article-content :global(h3) {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.4rem;
    color: var(--cream);
    margin: 2.5rem 0 1rem;
    font-weight: 400;
  }

  .article-content :global(blockquote) {
    border-left: 2px solid var(--gold);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--cream);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    color: var(--gray);
  }

  .article-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .article-content :global(strong) {
    color: var(--cream);
    font-weight: 600;
  }

  .article-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--dark-gray);
    text-align: center;
  }

  @media (max-width: 600px) {
    .article {
      padding: 6rem 1.5rem 3rem;
    }

    .article-image {
      height: 250px;
    }

    .article-content {
      font-size: 1rem;
    }
  }
</style>
