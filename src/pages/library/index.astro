---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import BookSlot from '../../components/BookSlot.astro';
import { getCollection } from 'astro:content';

// Get all blog posts sorted by date (handle empty collection gracefully)
let posts: any[] = [];
let renderedPosts: { slug: string; html: string }[] = [];

try {
  const allPosts = await getCollection('blog');
  posts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  // Pre-render all post content for the modal
  for (const post of posts) {
    const { Content } = await post.render();
    // We'll use a workaround to get the HTML - store Content component reference
    renderedPosts.push({ slug: post.slug, Content });
  }
} catch (e) {
  // Collection is empty or doesn't exist yet
  posts = [];
}

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

const categoryLabels: Record<string, string> = {
  competence: 'Competence',
  composure: 'Composure',
  character: 'Character'
};

const categories = ['all', 'competence', 'composure', 'character'];
---

<BaseLayout title="The Library | Jack Rook" solidNav={true}>

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-image" style="background-image: url('https://images.unsplash.com/photo-1507842217343-583bb7270b66?w=1200&q=80')"></div>
    <div class="hero-overlay"></div>
    <div class="page-hero-content">
      <div class="badge reveal">Field Notes</div>
      <h1 class="reveal">The Library</h1>
      <p class="reveal">
        Essays on the craft of becoming. Practical wisdom for building
        competence, composure, and character.
      </p>
    </div>
  </section>

  <section class="library-section">
    <!-- Category Filters -->
    <div class="library-categories">
      {categories.map((cat, i) => (
        <button
          class:list={['category-btn', { active: i === 0 }]}
          data-category={cat}
        >
          {cat.charAt(0).toUpperCase() + cat.slice(1)}
        </button>
      ))}
    </div>

    <!-- Blog Grid -->
    <div class="bookshelf">
      {posts.map(post => (
        <BlogCard
          title={post.data.title}
          excerpt={post.data.excerpt}
          category={post.data.category}
          date={formatDate(post.data.date)}
          readTime={post.data.readTime}
          image={post.data.image}
          slug={post.slug}
        />
      ))}

      <!-- Empty slots to fill grid -->
      {posts.length < 6 && Array(6 - posts.length).fill(null).map(() => (
        <BookSlot />
      ))}

      <!-- No results message -->
      <div class="no-results">
        <p>No essays in this category yet. Check back soon.</p>
      </div>
    </div>
  </section>

  <!-- Hidden content for modal -->
  <div class="hidden-content" style="display: none;">
    {posts.map((post, i) => {
      const rendered = renderedPosts[i];
      return (
        <div id={`content-${post.slug}`} class="post-content">
          <rendered.Content />
        </div>
      );
    })}
  </div>

  <!-- Article Modal -->
  <div id="article-modal" class="article-modal">
    <div class="modal-overlay"></div>
    <button class="modal-close" aria-label="Close">×</button>
    <div class="modal-content">
      <article class="modal-article">
        <header class="modal-header">
          <p class="modal-category"></p>
          <h1 class="modal-title"></h1>
          <p class="modal-meta"></p>
        </header>
        <div class="modal-image"></div>
        <div class="modal-body article-content"></div>
      </article>
    </div>
  </div>

</BaseLayout>

<style>
  /* Page Hero */
  .page-hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 8rem 2rem 4rem;
  }

  .hero-image {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(10,10,10,0.7) 0%, rgba(10,10,10,0.9) 100%);
    z-index: 1;
  }

  .page-hero-content {
    position: relative;
    z-index: 2;
    max-width: 700px;
  }

  .page-hero h1 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    color: var(--cream);
    font-weight: 400;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .page-hero p {
    font-size: 1.1rem;
    color: var(--gray);
    line-height: 1.8;
    max-width: 500px;
    margin: 0 auto;
  }

  /* Category Filters */
  .library-categories {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .category-btn {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--gray);
    background: transparent;
    border: 1px solid var(--dark-gray);
    cursor: pointer;
    padding: 0.75rem 1.5rem;
    transition: all 0.3s;
    font-family: 'Inter', sans-serif;
  }

  .category-btn:hover {
    border-color: var(--gold);
    color: var(--gold);
  }

  .category-btn.active {
    background: var(--gold);
    border-color: var(--gold);
    color: var(--black);
  }

  /* Library Section */
  .library-section {
    padding: 0 4rem 6rem;
    background: var(--black);
  }

  .bookshelf {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  /* No results */
  .no-results {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 2rem;
    display: none;
  }

  .no-results.show {
    display: block;
  }

  .no-results p {
    color: var(--gray);
    font-size: 1rem;
  }

  /* Mobile Responsive */
  @media (max-width: 1000px) {
    .page-hero {
      min-height: 40vh;
      padding: 7rem 1.5rem 3rem;
    }

    .library-section {
      padding: 0 2rem 4rem;
    }

    .bookshelf {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .bookshelf {
      grid-template-columns: 1fr;
      max-width: 400px;
    }

    .library-categories {
      gap: 0.5rem;
    }

    .category-btn {
      padding: 0.5rem 1rem;
      font-size: 0.7rem;
    }
  }

  /* Article Modal */
  .article-modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .article-modal.open {
    display: flex;
  }

  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    cursor: pointer;
  }

  .modal-content {
    position: relative;
    width: 100%;
    max-width: 800px;
    max-height: 100vh;
    overflow-y: auto;
    background: var(--black);
    z-index: 1001;
  }

  .modal-close {
    position: fixed;
    top: 1.5rem;
    left: 2rem;
    background: rgba(10, 10, 10, 0.5);
    border: 1px solid var(--dark-gray);
    color: var(--gray);
    width: 40px;
    height: 40px;
    font-size: 1.25rem;
    cursor: pointer;
    z-index: 1002;
    opacity: 0.7;
    transition: all 0.2s;
    font-weight: 300;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 2px;
  }

  .modal-close:hover {
    opacity: 1;
    border-color: var(--gold);
    color: var(--gold);
  }

  .modal-article {
    padding: 4rem 2rem;
  }

  .modal-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .modal-category {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .modal-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--cream);
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .modal-meta {
    font-size: 0.85rem;
    color: var(--gray);
    letter-spacing: 0.05em;
  }

  .modal-image {
    width: 100%;
    height: 400px;
    background-size: cover;
    background-position: center;
    margin-bottom: 3rem;
    border: 1px solid var(--dark-gray);
  }

  .modal-body {
    font-size: 1.1rem;
    line-height: 1.9;
    color: var(--cream);
  }

  .modal-body :global(p) {
    margin-bottom: 1.5rem;
    color: var(--gray);
  }

  .modal-body :global(h2) {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.75rem;
    color: var(--cream);
    margin: 3rem 0 1.5rem;
    font-weight: 400;
  }

  .modal-body :global(h3) {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.4rem;
    color: var(--cream);
    margin: 2.5rem 0 1rem;
    font-weight: 400;
  }

  .modal-body :global(blockquote) {
    border-left: 2px solid var(--gold);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--cream);
  }

  .modal-body :global(ul),
  .modal-body :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    color: var(--gray);
  }

  .modal-body :global(li) {
    margin-bottom: 0.75rem;
  }

  .modal-body :global(strong) {
    color: var(--cream);
    font-weight: 600;
  }

  .modal-body :global(code) {
    background: var(--charcoal);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .modal-body :global(pre) {
    background: var(--charcoal);
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--dark-gray);
  }

  .modal-body :global(pre code) {
    background: none;
    padding: 0;
  }

  @media (max-width: 600px) {
    .modal-article {
      padding: 3rem 1.5rem;
    }

    .modal-image {
      height: 250px;
    }

    .modal-body {
      font-size: 1rem;
    }

    .modal-close {
      top: 1rem;
      left: 1rem;
      width: 36px;
      height: 36px;
      font-size: 1.1rem;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const { animate, stagger } = Motion;

    // Category filter functionality
    const categoryBtns = document.querySelectorAll('.category-btn');
    const bookCards = document.querySelectorAll('.book-card');
    const bookSlots = document.querySelectorAll('.book-slot');
    const noResults = document.querySelector('.no-results');

    categoryBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        // Update active state
        categoryBtns.forEach(function(b) { b.classList.remove('active'); });
        btn.classList.add('active');

        var category = btn.dataset.category;
        var visibleCount = 0;

        // Filter cards
        bookCards.forEach(function(card) {
          var cardCategory = card.dataset.category;
          if (category === 'all' || cardCategory === category) {
            card.classList.remove('hidden');
            card.style.opacity = '0';
            visibleCount++;
          } else {
            card.classList.add('hidden');
          }
        });

        // Show/hide empty slots based on visible cards
        bookSlots.forEach(function(slot) {
          slot.style.display = category === 'all' ? 'flex' : 'none';
        });

        // Show no results message if needed
        if (visibleCount === 0 && category !== 'all') {
          noResults && noResults.classList.add('show');
        } else {
          noResults && noResults.classList.remove('show');
        }

        // Animate visible cards
        setTimeout(function() {
          var visibleCards = document.querySelectorAll('.book-card:not(.hidden)');
          if (visibleCards.length > 0) {
            animate(
              visibleCards,
              { opacity: [0, 1], y: [20, 0] },
              { delay: stagger(0.08), duration: 0.4, easing: 'ease-out' }
            );
          }
        }, 50);
      });
    });

    // Modal functionality
    var modal = document.getElementById('article-modal');
    var modalOverlay = modal && modal.querySelector('.modal-overlay');
    var modalClose = document.querySelector('.modal-close');
    var modalTitle = modal && modal.querySelector('.modal-title');
    var modalCategory = modal && modal.querySelector('.modal-category');
    var modalMeta = modal && modal.querySelector('.modal-meta');
    var modalImage = modal && modal.querySelector('.modal-image');
    var modalBody = modal && modal.querySelector('.modal-body');

    function openModal(card) {
      var slug = card.dataset.slug;
      var title = card.dataset.title;
      var category = card.dataset.categoryLabel;
      var date = card.dataset.date;
      var readTime = card.dataset.readtime;
      var image = card.dataset.image;

      // Get pre-rendered content (build-time generated, trusted)
      var contentEl = document.getElementById('content-' + slug);
      var content = contentEl ? contentEl.innerHTML : '';

      // Populate modal
      if (modalTitle) modalTitle.textContent = title;
      if (modalCategory) modalCategory.textContent = category;
      if (modalMeta) modalMeta.textContent = date + ' · ' + readTime;
      if (modalImage) modalImage.style.backgroundImage = "url('" + image + "')";
      if (modalBody) modalBody.innerHTML = content;

      // Open modal
      modal.classList.add('open');
      document.body.style.overflow = 'hidden';

      // Animate in
      animate(
        modal.querySelector('.modal-content'),
        { opacity: [0, 1], y: [30, 0] },
        { duration: 0.3, easing: 'ease-out' }
      );
    }

    function closeModal() {
      modal && modal.classList.remove('open');
      document.body.style.overflow = '';
    }

    // Click handlers for cards
    bookCards.forEach(function(card) {
      card.addEventListener('click', function(e) {
        e.preventDefault();
        openModal(card);
      });
    });

    // Close handlers
    modalClose && modalClose.addEventListener('click', closeModal);
    modalOverlay && modalOverlay.addEventListener('click', closeModal);

    // Escape key closes modal
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal && modal.classList.contains('open')) {
        closeModal();
      }
    });
  });
</script>
